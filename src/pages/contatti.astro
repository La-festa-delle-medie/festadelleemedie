---
import BaseLayout from '../components/layout/BaseLayout.astro';
---

<BaseLayout
  title="Contatti - La Festa delle Medie"
  description="Contattaci per informazioni su La Festa delle Medie"
>
  <div class="page-content">
    <div class="container">
      <header class="page-header">
        <h1 class="page-title">Contatti</h1>
      </header>

      <div class="contact-wrapper">
        <form class="contact-form" method="POST">
          <div class="form-group">
            <label for="name">Nome</label>
            <input type="text" id="name" name="name" required />
          </div>

          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required />
          </div>

          <div class="form-group">
            <label for="message">Messaggio</label>
            <textarea id="message" name="message" rows="5" required></textarea>
          </div>

          <button type="submit" class="btn-submit">Invia</button>
        </form>

        <div class="contact-info">
          <p>Oppure scrivici a</p>
          <a href="mailto:info@lafestadellemedie.it">info@lafestadellemedie.it</a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .page-content {
    padding-top: calc(72px + var(--space-3xl));
    padding-bottom: var(--space-3xl);
  }

  .page-header {
    margin-bottom: var(--space-2xl);
  }

  .page-title {
    font-size: var(--text-5xl);
    font-weight: 700;
  }

  .contact-wrapper {
    max-width: 500px;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .form-group label {
    font-size: var(--text-sm);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
  }

  .form-group input,
  .form-group textarea {
    padding: var(--space-md);
    font-size: var(--text-base);
    font-family: var(--font-body);
    border: 1px solid rgba(0, 0, 0, 0.2);
    background: var(--color-white);
    transition: border-color 0.2s ease;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-black);
  }

  .form-group textarea {
    resize: vertical;
  }

  .btn-submit {
    align-self: flex-start;
    background: var(--color-black);
    color: var(--color-white);
    padding: var(--space-sm) var(--space-xl);
    border: none;
    font-weight: 600;
    text-transform: uppercase;
    font-size: var(--text-sm);
    letter-spacing: var(--tracking-wider);
    border-radius: 9999px;
    cursor: pointer;
    transition: background 0.2s ease;
  }

  .btn-submit:hover {
    background: var(--color-accent);
  }

  .contact-info {
    margin-top: var(--space-2xl);
    padding-top: var(--space-xl);
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  .contact-info p {
    font-size: var(--text-sm);
    color: var(--color-gray);
    margin-bottom: var(--space-xs);
  }

  .contact-info a {
    font-size: var(--text-lg);
    color: var(--color-black);
    text-decoration: none;
  }

  .contact-info a:hover {
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .page-content {
      padding-top: calc(65px + var(--space-2xl));
    }

    .page-title {
      font-size: var(--text-3xl);
    }
  }
</style>
