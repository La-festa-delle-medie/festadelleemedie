---
import BaseLayout from '../components/layout/BaseLayout.astro';
import Hero from '../components/sections/Hero.astro';
import EventGrid from '../components/sections/EventGrid.astro';
import Newsletter from '../components/sections/Newsletter.astro';
import Container from '../components/ui/Container.astro';
import siteSettings from '../content/settings/site.json';

// Mock data per eventi di esempio
const events = [
  {
    title: 'ifratelllicaproni',
    date: '8 Marzo 2025',
    image: '/images/img.jpg',
    description: 'Domino del pane e l\'omino della mela',
    slug: 'ifratellicaproni'
  },
  {
    title: 'Teatro del Piccione',
    date: '15 Marzo 2025',
    image: '/images/img 2.jpg',
    description: 'Soqquadro',
    slug: 'teatro-piccione'
  },
  {
    title: 'Performance Art',
    date: '22 Marzo 2025',
    image: '/images/img 3.jpg',
    description: 'Una serata di arte performativa contemporanea',
    slug: 'performance-art'
  },
  {
    title: 'Workshop Collettivo',
    date: '29 Marzo 2025',
    image: '/images/img 4.jpg',
    description: 'Laboratorio aperto alla comunità',
    slug: 'workshop'
  }
];
---

<BaseLayout
  title="La Festa delle Medie - Home"
  description="Un progetto culturale che unisce arte, musica e comunità"
>
  <Hero
    image={siteSettings.heroImage}
    imageAlt="La Festa delle Medie"
  />

  <EventGrid
    title="Prossimi Eventi"
    events={events}
  />

  <section class="about-section">
    <Container>
      <div class="about-content">
        <div class="about-header">
          <h2 class="about-title">Chi Siamo</h2>
        </div>
        <div class="about-grid">
          <div class="about-text">
            <p class="about-lead">
              La Festa delle Medie è un progetto culturale e artistico che nasce dalla
              volontà di creare uno spazio di relazione con la comunità e con il mondo.
            </p>
          </div>
          <div class="about-text-secondary">
            <p>
              Un organismo culturale pubblico e visionario, che da oltre cinquant'anni
              fa della ricerca artistica uno spazio di relazione, programmando attività
              locali e internazionali.
            </p>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <Newsletter />
</BaseLayout>

<style>
  .about-section {
    padding: 200px 0 180px;
    margin-left: 100px;
    background: var(--color-gray-light);
    position: relative;
  }

  .about-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--color-black);
  }

  .about-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-xl);
  }

  .about-header {
    margin-bottom: 100px;
  }

  .about-title {
    font-family: var(--font-display);
    font-size: 80px;
    font-weight: 700;
    font-variation-settings: 'wght' 700;
    text-transform: uppercase;
    letter-spacing: var(--tracking-tight);
    line-height: var(--leading-tight);
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 100px;
    max-width: 1200px;
  }

  .about-lead {
    font-family: var(--font-body);
    font-size: 32px;
    line-height: 1.45;
    font-weight: 400;
    letter-spacing: -0.01em;
  }

  .about-text-secondary {
    padding-top: 40px;
  }

  .about-text-secondary p {
    font-family: var(--font-body);
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    letter-spacing: -0.005em;
    color: var(--color-gray-dark);
  }

  @media (max-width: 1024px) {
    .about-section {
      padding: 140px 0 120px;
    }

    .about-title {
      font-size: 60px;
    }

    .about-grid {
      gap: 60px;
    }

    .about-lead {
      font-size: 24px;
    }
  }

  @media (max-width: 768px) {
    .about-section {
      padding: 100px 0 80px;
      margin-left: 60px;
    }

    .about-content {
      padding: 0 var(--space-lg);
    }

    .about-header {
      margin-bottom: 60px;
    }

    .about-title {
      font-size: 40px;
    }

    .about-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .about-lead {
      font-size: 20px;
    }

    .about-text-secondary {
      padding-top: 0;
    }

    .about-text-secondary p {
      font-size: var(--text-base);
    }
  }

  @media (max-width: 480px) {
    .about-section {
      margin-left: 50px;
      padding: 60px 0;
    }

    .about-content {
      padding: 0 var(--space-md);
    }

    .about-header {
      margin-bottom: 40px;
    }

    .about-title {
      font-size: 32px;
    }

    .about-lead {
      font-size: 18px;
    }
  }
</style>
