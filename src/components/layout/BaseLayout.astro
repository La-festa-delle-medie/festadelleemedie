---
import Header from './Header.astro';
import Footer from './Footer.astro';
import '../../styles/global.css';
import siteSettings from '../../content/settings/site.json';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'La Festa delle Medie',
  description = 'Sito ufficiale de La Festa delle Medie'
} = Astro.props;

const themeColor = siteSettings.themeColor || '#2D5A5A';
---

<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="icon" type="image/png" href="/images/logo.png">

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Syne:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">

  <!-- Colore tema dinamico dal CMS -->
  <style define:vars={{ themeColor }}>
    :root {
      --color-accent: var(--themeColor);
    }
  </style>
</head>
<body>
  <Header />
  <div class="page-wrapper">
    <main class="main-content">
      <slot />
    </main>
    <Footer />
  </div>
</body>
</html>

<style>
  .page-wrapper {
    margin-left: 80px;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .main-content {
    flex: 1;
  }

  @media (max-width: 768px) {
    .page-wrapper {
      margin-left: 60px;
    }
  }

  @media (max-width: 480px) {
    .page-wrapper {
      margin-left: 50px;
    }
  }
</style>
