---
// Header Component - Sidebar a sinistra
---

<header class="header">
  <div class="header-content">
    <a href="/" class="logo">
      <img src="/images/logo.png" alt="La Festa delle Medie" class="logo-img">
    </a>
    <a href="/en" class="lang-switch">EN</a>
  </div>
</header>

<!-- Menu Laterale -->
<div class="menu-sidebar">
  <button class="menu-trigger" id="menuTrigger">
    <span class="menu-label">Menu</span>
  </button>
</div>

<!-- Menu Overlay Fullscreen -->
<div class="menu-overlay" id="menuOverlay">
  <div class="menu-content">
    <button class="menu-close" id="menuClose">Chiudi</button>

    <nav class="nav-main">
      <a href="/" class="nav-link">Home</a>
      <div class="nav-group">
        <span class="nav-group-label">Archivio</span>
        <div class="nav-group-links">
          <a href="/archivio/2025" class="nav-sublink">2025</a>
          <a href="/archivio/2024" class="nav-sublink">2024</a>
          <a href="/archivio/2023" class="nav-sublink">2023</a>
        </div>
      </div>
      <a href="/chi-siamo" class="nav-link">Chi Siamo</a>
      <a href="/ambassador" class="nav-link">Ambassador</a>
      <a href="/support" class="nav-link">Support</a>
      <a href="/shop" class="nav-link">Shop</a>
      <a href="/contatti" class="nav-link">Contatti</a>
    </nav>

    <div class="menu-footer">
      <a href="mailto:info@lafestadellemedie.it" class="menu-email">info@lafestadellemedie.it</a>
    </div>
  </div>
</div>

<style>
  /* Header con logo */
  .header {
    position: fixed;
    top: 0;
    left: 80px;
    right: 0;
    z-index: 100;
    background: var(--color-white);
    border-bottom: 1px solid rgba(0,0,0,0.1);
  }

  .header-content {
    padding: var(--space-md) var(--space-lg);
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 72px;
  }

  .lang-switch {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    color: var(--color-black);
    text-decoration: none;
    padding: var(--space-xs) var(--space-sm);
    border: 1px solid var(--color-black);
    border-radius: 9999px;
    transition: all 0.2s ease;
  }

  .lang-switch:hover {
    background: var(--color-black);
    color: var(--color-white);
    opacity: 1;
  }

  .logo {
    display: block;
    opacity: 1 !important;
  }

  .logo:hover {
    opacity: 1 !important;
  }

  .logo-img {
    height: 40px;
    width: auto;
    border-radius: 0;
  }

  /* Sidebar Menu */
  .menu-sidebar {
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    width: 80px;
    background: var(--color-white);
    border-right: 1px solid rgba(0,0,0,0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 101;
  }

  .menu-trigger {
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--space-md);
    writing-mode: vertical-rl;
    text-orientation: mixed;
    transform: rotate(180deg);
  }

  .menu-label {
    font-family: var(--font-body);
    font-weight: 500;
    font-size: var(--text-sm);
    letter-spacing: var(--tracking-wider);
    text-transform: uppercase;
    color: var(--color-black);
    transition: color 0.2s ease;
  }

  .menu-trigger:hover .menu-label {
    color: var(--color-accent);
  }

  /* Menu Overlay */
  .menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--color-white);
    z-index: 200;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .menu-overlay.active {
    opacity: 1;
    pointer-events: all;
  }

  .menu-content {
    height: 100%;
    display: flex;
    flex-direction: column;
    padding: var(--space-lg) var(--space-2xl);
    max-width: 800px;
  }

  .menu-close {
    align-self: flex-start;
    background: none;
    border: none;
    font-size: var(--text-sm);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    cursor: pointer;
    padding: var(--space-sm) 0;
    color: var(--color-black);
    margin-bottom: var(--space-3xl);
    transition: color 0.2s ease;
  }

  .menu-close:hover {
    color: var(--color-accent);
  }

  .nav-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: var(--space-md);
  }

  .nav-link {
    font-family: var(--font-display);
    font-size: var(--text-4xl);
    font-weight: 700;
    color: var(--color-black);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .nav-link:hover {
    color: var(--color-accent);
    opacity: 1;
  }

  .nav-group {
    margin: var(--space-sm) 0;
  }

  .nav-group-label {
    font-family: var(--font-display);
    font-size: var(--text-4xl);
    font-weight: 700;
    color: var(--color-black);
    display: block;
    margin-bottom: var(--space-sm);
  }

  .nav-group-links {
    display: flex;
    gap: var(--space-lg);
    padding-left: var(--space-xs);
  }

  .nav-sublink {
    font-family: var(--font-body);
    font-size: var(--text-lg);
    color: var(--color-gray);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .nav-sublink:hover {
    color: var(--color-accent);
    opacity: 1;
  }

  .menu-footer {
    padding: var(--space-xl) 0;
    border-top: 1px solid rgba(0,0,0,0.1);
  }

  .menu-email {
    font-size: var(--text-sm);
    color: var(--color-gray);
    text-decoration: none;
  }

  .menu-email:hover {
    color: var(--color-accent);
    opacity: 1;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .header {
      left: 60px;
    }

    .header-content {
      padding: var(--space-sm) var(--space-md);
      height: 65px;
    }

    .logo-img {
      height: 36px;
    }

    .menu-sidebar {
      width: 60px;
    }

    .menu-label {
      font-size: var(--text-xs);
    }

    .menu-content {
      padding: var(--space-lg);
    }

    .nav-link,
    .nav-group-label {
      font-size: var(--text-3xl);
    }

    .nav-sublink {
      font-size: var(--text-base);
    }
  }

  @media (max-width: 480px) {
    .header {
      left: 50px;
    }

    .header-content {
      height: 60px;
    }

    .menu-sidebar {
      width: 50px;
    }

    .nav-link,
    .nav-group-label {
      font-size: var(--text-2xl);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuTrigger = document.getElementById('menuTrigger');
    const menuOverlay = document.getElementById('menuOverlay');
    const menuClose = document.getElementById('menuClose');
    const navLinks = document.querySelectorAll('.nav-link, .nav-sublink');

    function openMenu() {
      menuOverlay?.classList.add('active');
      document.body.style.overflow = 'hidden';
    }

    function closeMenu() {
      menuOverlay?.classList.remove('active');
      document.body.style.overflow = '';
    }

    menuTrigger?.addEventListener('click', openMenu);
    menuClose?.addEventListener('click', closeMenu);

    navLinks.forEach(link => {
      link.addEventListener('click', closeMenu);
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeMenu();
    });
  });
</script>
