---
// Header Component - Minimal Artistic
---

<header class="header">
  <div class="header-content">
    <a href="/" class="logo">
      <img src="/images/logo.png" alt="La Festa delle Medie" class="logo-img">
    </a>
  </div>
</header>

<!-- Menu Laterale -->
<div class="menu-sidebar">
  <button class="menu-trigger" id="menuTrigger">
    <span class="menu-label">MENU</span>
  </button>
</div>

<!-- Overlay Menu Fullscreen -->
<div class="menu-overlay" id="menuOverlay">
  <div class="menu-wrapper">
    <!-- Close Button -->
    <div class="menu-header">
      <button class="menu-close" id="menuClose">
        <span class="close-label">Chiudi</span>
      </button>
    </div>

    <!-- Menu Grid -->
    <div class="menu-grid">
      <!-- Main Navigation -->
      <nav class="menu-nav-main">
        <a href="/" class="menu-link-main">
          <span class="link-number">01</span>
          <span class="link-text">Home</span>
        </a>
        <a href="/eventi" class="menu-link-main">
          <span class="link-number">02</span>
          <span class="link-text">Eventi</span>
        </a>
        <a href="/chi-siamo" class="menu-link-main">
          <span class="link-number">03</span>
          <span class="link-text">Chi Siamo</span>
        </a>
        <a href="/contatti" class="menu-link-main">
          <span class="link-number">04</span>
          <span class="link-text">Contatti</span>
        </a>
      </nav>

      <!-- Secondary Sections -->
      <div class="menu-secondary">
        <div class="menu-section">
          <h3 class="menu-section-title">Prossimi Eventi</h3>
          <ul class="menu-section-links">
            <li><a href="/eventi/marzo-2025" class="menu-section-link">Marzo 2025</a></li>
            <li><a href="/eventi/aprile-2025" class="menu-section-link">Aprile 2025</a></li>
            <li><a href="/eventi/archivio" class="menu-section-link">Archivio</a></li>
          </ul>
        </div>

        <div class="menu-section">
          <h3 class="menu-section-title">L'Associazione</h3>
          <ul class="menu-section-links">
            <li><a href="/chi-siamo" class="menu-section-link">Chi Siamo</a></li>
            <li><a href="/mission" class="menu-section-link">Mission</a></li>
            <li><a href="/network" class="menu-section-link">Network</a></li>
          </ul>
        </div>

        <div class="menu-section">
          <h3 class="menu-section-title">Partecipa</h3>
          <ul class="menu-section-links">
            <li><a href="/newsletter" class="menu-section-link">Newsletter</a></li>
            <li><a href="/sostieni" class="menu-section-link">Sostienici</a></li>
            <li><a href="/volontariato" class="menu-section-link">Volontariato</a></li>
          </ul>
        </div>

        <div class="menu-section menu-section-highlight">
          <h3 class="menu-section-title">Contatti</h3>
          <ul class="menu-section-links">
            <li><a href="mailto:info@lafestadellemedie.it" class="menu-section-link">info@lafestadellemedie.it</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Header minimal - solo logo */
  .header {
    background: var(--color-white);
    padding: var(--space-md) 0;
    position: fixed;
    top: 0;
    left: 100px;
    right: 0;
    z-index: 90;
  }

  .header-content {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding-left: 10px;
  }

  .logo {
    display: block;
  }

  .logo-img {
    height: 60px;
    width: auto;
  }

  /* Sidebar Menu Trigger */
  .menu-sidebar {
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    width: 100px;
    background: var(--color-white);
    border-right: 2px solid var(--color-black);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 95;
  }

  .menu-trigger {
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--space-md);
    writing-mode: vertical-rl;
    text-orientation: mixed;
    transform: rotate(180deg);
  }

  .menu-label {
    font-weight: 700;
    font-size: var(--text-xl);
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--color-black);
  }

  /* Menu Overlay Fullscreen */
  .menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--color-white);
    z-index: 200;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.4s ease;
    overflow-y: auto;
  }

  .menu-overlay.active {
    opacity: 1;
    pointer-events: all;
  }

  .menu-wrapper {
    min-height: 100vh;
    padding: 80px 100px;
    display: flex;
    flex-direction: column;
  }

  /* Menu Header */
  .menu-header {
    display: flex;
    justify-content: flex-end;
    margin-bottom: 120px;
  }

  .menu-close {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
  }

  .close-label {
    font-size: var(--text-sm);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: var(--tracking-widest);
    color: var(--color-black);
  }

  /* Menu Grid Layout */
  .menu-grid {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 120px;
    max-width: 1600px;
    margin: 0 auto;
    width: 100%;
  }

  /* Main Navigation Links */
  .menu-nav-main {
    display: flex;
    flex-direction: column;
    gap: 0;
    border-left: 2px solid var(--color-black);
    padding-left: 40px;
  }

  .menu-link-main {
    display: flex;
    align-items: baseline;
    gap: 32px;
    padding: 32px 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    text-decoration: none;
  }

  .menu-link-main:last-child {
    border-bottom: none;
  }

  .link-number {
    font-size: var(--text-xs);
    font-weight: 700;
    color: var(--color-gray-dark);
    letter-spacing: var(--tracking-wider);
    min-width: 30px;
  }

  .link-text {
    font-size: 72px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    color: var(--color-black);
    line-height: var(--leading-none);
  }

  /* Secondary Menu Sections */
  .menu-secondary {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px 40px;
  }

  .menu-section {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .menu-section-highlight {
    background: var(--color-black);
    color: var(--color-white);
    padding: 32px;
    grid-column: span 2;
  }

  .menu-section-title {
    font-size: var(--text-xs);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: var(--tracking-widest);
    color: var(--color-gray-dark);
    margin-bottom: 4px;
  }

  .menu-section-highlight .menu-section-title {
    color: rgba(255, 255, 255, 0.6);
  }

  .menu-section-links {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .menu-section-link {
    font-size: var(--text-lg);
    font-weight: 400;
    color: var(--color-black);
    text-decoration: none;
    display: block;
    line-height: 1.4;
  }

  .menu-section-highlight .menu-section-link {
    color: var(--color-white);
  }

  @media (max-width: 1024px) {
    .menu-wrapper {
      padding: 60px 60px;
    }

    .menu-header {
      margin-bottom: 80px;
    }

    .menu-grid {
      grid-template-columns: 1fr;
      gap: 80px;
    }

    .menu-nav-main {
      padding-left: 32px;
    }

    .link-text {
      font-size: 56px;
    }

    .menu-secondary {
      gap: 40px 32px;
    }
  }

  @media (max-width: 768px) {
    .header {
      left: 60px;
      padding: var(--space-sm) 0;
    }

    .header-content {
      padding-left: 8px;
    }

    .logo-img {
      height: 50px;
    }

    .menu-sidebar {
      width: 60px;
    }

    .menu-label {
      font-size: var(--text-base);
    }

    .menu-wrapper {
      padding: 40px 32px;
    }

    .menu-header {
      margin-bottom: 60px;
    }

    .menu-grid {
      gap: 60px;
    }

    .menu-nav-main {
      padding-left: 24px;
      border-left-width: 1px;
    }

    .link-text {
      font-size: 40px;
    }

    .link-number {
      min-width: 24px;
    }

    .menu-secondary {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .menu-section-highlight {
      padding: 24px;
      grid-column: span 1;
    }

    .menu-section-link {
      font-size: var(--text-base);
    }
  }

  @media (max-width: 480px) {
    .header {
      padding: var(--space-sm) 0;
      left: 50px;
    }

    .header-content {
      padding-left: 6px;
    }

    .logo-img {
      height: 45px;
    }

    .menu-sidebar {
      width: 50px;
    }

    .menu-label {
      font-size: var(--text-sm);
      letter-spacing: 0.2em;
    }

    .menu-wrapper {
      padding: 32px 20px;
    }

    .menu-header {
      margin-bottom: 40px;
    }

    .menu-nav-main {
      padding-left: 16px;
    }

    .link-text {
      font-size: 32px;
    }

    .menu-link-main {
      gap: 16px;
      padding: 20px 0;
    }

    .menu-section-highlight {
      padding: 20px;
    }
  }
</style>

<script>
  // Menu Toggle Script
  document.addEventListener('DOMContentLoaded', () => {
    const menuTrigger = document.getElementById('menuTrigger');
    const menuOverlay = document.getElementById('menuOverlay');
    const menuClose = document.getElementById('menuClose');
    const menuLinksMain = document.querySelectorAll('.menu-link-main');
    const menuSectionLinks = document.querySelectorAll('.menu-section-link');

    function openMenu() {
      menuOverlay?.classList.add('active');
      document.body.style.overflow = 'hidden';
    }

    function closeMenu() {
      menuOverlay?.classList.remove('active');
      document.body.style.overflow = '';
    }

    menuTrigger?.addEventListener('click', openMenu);
    menuClose?.addEventListener('click', closeMenu);

    // Close menu when clicking main links
    menuLinksMain.forEach(link => {
      link.addEventListener('click', closeMenu);
    });

    // Close menu when clicking section links
    menuSectionLinks.forEach(link => {
      link.addEventListener('click', closeMenu);
    });

    // Close menu on ESC key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeMenu();
      }
    });
  });
</script>
