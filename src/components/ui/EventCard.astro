---
interface Props {
  title: string;
  date?: string;
  image: string;
  description?: string;
  slug?: string;
  index?: number;
}

const {
  title,
  date,
  image,
  description,
  slug,
  index = 0
} = Astro.props;

const href = slug ? `/eventi/${slug}` : '#';
const formattedIndex = String(index + 1).padStart(2, '0');
---

<article class="event-card">
  <a href={href} class="event-card-link">
    <div class="event-card-image-wrapper media-wrapper">
      <img
        src={image}
        alt={title}
        class="event-card-image"
      />
      <div class="event-card-info-overlay">
        <span class="event-index">{formattedIndex}</span>
        <div class="event-info">
          {date && (
            <time class="event-date">{date}</time>
          )}
          <h3 class="event-title">{title}</h3>
        </div>
      </div>
    </div>

    {description && (
      <p class="event-description">{description}</p>
    )}
  </a>
</article>

<style>
  .event-card {
    background: var(--color-white);
    animation: fadeInUp 0.8s ease-out;
    animation-fill-mode: both;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .event-card:nth-child(1) { animation-delay: 0.1s; }
  .event-card:nth-child(2) { animation-delay: 0.2s; }
  .event-card:nth-child(3) { animation-delay: 0.3s; }
  .event-card:nth-child(4) { animation-delay: 0.4s; }

  .event-card-link {
    display: block;
    color: inherit;
  }

  .event-card-image-wrapper {
    position: relative;
    aspect-ratio: 3 / 4;
    margin-bottom: 0;
  }

  .event-card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Info Overlay - Testi sovrapposti (sopra l'overlay colore) */
  .event-card-info-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    padding: var(--space-lg);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background: linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,0.4) 100%);
    z-index: 2;
    pointer-events: none;
  }

  /* Numero dell'evento in alto a sinistra */
  .event-index {
    font-family: var(--font-display);
    font-size: 120px;
    font-weight: 800;
    font-variation-settings: 'wght' 800;
    line-height: 0.9;
    letter-spacing: var(--tracking-tighter);
    color: rgba(255, 255, 255, 0.1);
    position: absolute;
    top: -20px;
    left: -10px;
    pointer-events: none;
  }

  /* Info evento in basso */
  .event-info {
    position: relative;
    z-index: 2;
  }

  .event-date {
    font-family: var(--font-mono);
    display: block;
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: var(--space-sm);
  }

  .event-title {
    font-family: var(--font-display);
    font-size: var(--text-4xl);
    font-weight: 700;
    font-variation-settings: 'wght' 700;
    line-height: var(--leading-snug);
    text-transform: uppercase;
    color: var(--color-white);
    letter-spacing: var(--tracking-tight);
  }

  /* Descrizione sotto l'immagine */
  .event-description {
    font-family: var(--font-body);
    font-size: var(--text-base);
    font-weight: 400;
    line-height: var(--leading-relaxed);
    letter-spacing: -0.005em;
    color: var(--color-black);
    margin: 0;
    padding: var(--space-md) 0 0 0;
    border-top: 2px solid var(--color-black);
    margin-top: var(--space-md);
  }

  @media (max-width: 768px) {
    .event-card-image-wrapper {
      aspect-ratio: 4 / 5;
      margin-bottom: 0;
    }

    .event-card-info-overlay {
      padding: var(--space-md);
    }

    .event-index {
      font-size: 80px;
      top: -10px;
      left: -5px;
    }

    .event-title {
      font-size: var(--text-2xl);
    }

    .event-description {
      font-size: var(--text-sm);
      padding: var(--space-sm) 0 0 0;
      margin-top: var(--space-sm);
    }
  }

  @media (max-width: 480px) {
    .event-card-image-wrapper {
      aspect-ratio: 1 / 1;
      margin-bottom: 0;
    }

    .event-card-info-overlay {
      padding: var(--space-sm);
    }

    .event-index {
      font-size: 60px;
    }

    .event-title {
      font-size: var(--text-xl);
    }

    .event-description {
      font-size: var(--text-sm);
      padding: var(--space-sm) 0 0 0;
      margin-top: var(--space-sm);
    }
  }
</style>
