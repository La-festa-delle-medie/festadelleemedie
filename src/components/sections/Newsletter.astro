<section class="newsletter">
  <div class="container">
    <div class="newsletter-content">
      <h2 class="newsletter-title">Rimani aggiornato</h2>
      <p class="newsletter-description">
        Iscriviti alla newsletter per ricevere tutte le novita su eventi e iniziative.
      </p>

      <form class="newsletter-form" id="newsletterForm">
        <div class="form-row">
          <input
            type="email"
            id="email"
            name="email"
            placeholder="La tua email"
            class="newsletter-input"
            required
          />
          <button type="submit" class="btn">
            Iscriviti
          </button>
        </div>
        <p class="form-message" id="formMessage"></p>
      </form>

      <p class="newsletter-privacy">
        I tuoi dati sono al sicuro. Niente spam.
      </p>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('newsletterForm');
  const message = document.getElementById('formMessage');

  if (form && message) {
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      message.textContent = 'Iscrizione in corso...';
      message.style.color = 'var(--color-gray)';

      setTimeout(() => {
        message.textContent = 'Iscrizione completata. Grazie!';
        message.style.color = 'var(--color-black)';
        form.reset();
      }, 1500);
    });
  }
</script>

<style>
  .newsletter {
    padding: var(--space-3xl) 0;
    background: var(--color-gray-light);
    position: relative;
    z-index: 2;
  }

  .newsletter-content {
    max-width: 500px;
  }

  .newsletter-title {
    font-size: var(--text-2xl);
    font-weight: 700;
    margin-bottom: var(--space-md);
  }

  .newsletter-description {
    font-size: var(--text-base);
    color: var(--color-gray-dark);
    margin-bottom: var(--space-xl);
    line-height: var(--leading-relaxed);
  }

  .newsletter-form {
    margin-bottom: var(--space-lg);
  }

  .form-row {
    display: flex;
    gap: var(--space-sm);
  }

  .newsletter-input {
    flex: 1;
  }

  .form-message {
    margin-top: var(--space-md);
    font-size: var(--text-sm);
    min-height: 20px;
  }

  .newsletter-privacy {
    font-size: var(--text-sm);
    color: var(--color-gray);
    margin: 0;
  }

  @media (max-width: 768px) {
    .newsletter {
      padding: var(--space-2xl) 0;
    }

    .btn {
      width: 100%;
    }
  }
</style>
