---
import Container from '../ui/Container.astro';
import Button from '../ui/Button.astro';
---

<section class="newsletter-section">
  <Container>
    <div class="newsletter-content">
      <div class="newsletter-text">
        <h2 class="newsletter-title">Rimani Aggiornato</h2>
        <p class="newsletter-description">
          Iscriviti alla newsletter per ricevere tutte le novit√† su eventi e iniziative.
        </p>
      </div>

      <form class="newsletter-form">
        <input
          type="email"
          placeholder="La tua email"
          class="newsletter-input"
          required
        />
        <Button type="submit" variant="primary">
          Iscriviti
        </Button>
      </form>
    </div>
  </Container>
</section>

<style>
  .newsletter-section {
    background: var(--color-black);
    color: var(--color-white);
    padding: 180px 0 200px;
    margin-left: 100px;
    position: relative;
  }

  .newsletter-section::before {
    content: '04';
    position: absolute;
    top: 40px;
    right: 80px;
    font-size: 200px;
    font-weight: 700;
    line-height: 1;
    color: rgba(255, 255, 255, 0.03);
  }

  .newsletter-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 100px;
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .newsletter-text {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .newsletter-title {
    font-size: 80px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    line-height: var(--leading-none);
    margin-bottom: 40px;
  }

  .newsletter-description {
    font-size: 24px;
    line-height: 1.5;
    max-width: 500px;
    opacity: 0.9;
  }

  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    padding-top: 40px;
  }

  .newsletter-input {
    font-family: var(--font-family);
    font-size: var(--text-xl);
    padding: 24px 0;
    border: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.3);
    background: transparent;
    color: var(--color-white);
    outline: none;
    transition: border-color 0.3s ease;
  }

  .newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.4);
  }

  .newsletter-input:focus {
    border-bottom-color: var(--color-white);
  }

  @media (max-width: 1024px) {
    .newsletter-section {
      padding: 140px 0 160px;
    }

    .newsletter-section::before {
      font-size: 140px;
      top: 30px;
      right: 60px;
    }

    .newsletter-content {
      gap: 80px;
    }

    .newsletter-title {
      font-size: 60px;
    }

    .newsletter-description {
      font-size: 20px;
    }
  }

  @media (max-width: 768px) {
    .newsletter-section {
      padding: 100px 0 120px;
      margin-left: 60px;
    }

    .newsletter-section::before {
      font-size: 100px;
      top: 20px;
      right: 40px;
    }

    .newsletter-content {
      grid-template-columns: 1fr;
      gap: 60px;
    }

    .newsletter-title {
      font-size: 40px;
      margin-bottom: 20px;
    }

    .newsletter-description {
      font-size: 18px;
    }

    .newsletter-form {
      padding-top: 0;
    }
  }

  @media (max-width: 480px) {
    .newsletter-section {
      padding: 60px 0 80px;
      margin-left: 50px;
    }

    .newsletter-section::before {
      font-size: 80px;
      top: 10px;
      right: 20px;
    }

    .newsletter-title {
      font-size: 32px;
    }

    .newsletter-description {
      font-size: 16px;
    }

    .newsletter-input {
      font-size: var(--text-lg);
      padding: 20px 0;
    }
  }
</style>
