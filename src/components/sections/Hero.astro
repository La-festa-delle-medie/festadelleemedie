---
interface Props {
  image?: string;
  imageAlt?: string;
  useGradient?: boolean;
}

const {
  image,
  imageAlt = 'La Festa delle Medie',
  useGradient = true
} = Astro.props;
---

<section class="hero">
  {useGradient ? (
    <div class="hero-gradient"></div>
  ) : (
    <div class="hero-image-container">
      <img
        src={image}
        alt={imageAlt}
        class="hero-image"
      />
    </div>
  )}
</section>

<style>
  .hero {
    position: fixed;
    top: 0;
    left: 80px;
    right: 0;
    bottom: 0;
    overflow: hidden;
    z-index: 0;
    padding: 0;
  }

  .hero-gradient {
    width: 100%;
    height: 100%;
    min-height: 100vh;
    background: hsla(191, 60%, 89%, 1);
    background: linear-gradient(90deg, hsla(191, 60%, 89%, 1) 0%, hsla(56, 59%, 86%, 1) 50%, hsla(25, 85%, 69%, 1) 100%);
    background: -moz-linear-gradient(90deg, hsla(191, 60%, 89%, 1) 0%, hsla(56, 59%, 86%, 1) 50%, hsla(25, 85%, 69%, 1) 100%);
    background: -webkit-linear-gradient(90deg, hsla(191, 60%, 89%, 1) 0%, hsla(56, 59%, 86%, 1) 50%, hsla(25, 85%, 69%, 1) 100%);
  }

  .hero-image-container {
    width: 100%;
    height: 100%;
    min-height: 100vh;
  }

  .hero-image {
    width: 100% !important;
    height: 100% !important;
    min-height: 100vh !important;
    object-fit: cover !important;
    object-position: center !important;
    border-radius: 0 !important;
    max-width: none !important;
  }

  @media (max-width: 768px) {
    .hero {
      left: 60px;
    }
  }

  @media (max-width: 480px) {
    .hero {
      left: 50px;
    }
  }
</style>
